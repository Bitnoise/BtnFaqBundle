{% from 'BtnCrudBundle::breadcrumb.html.twig' import breadcrumb %}
{% extends '::control.html.twig' %}

{% form_theme edit_form 'BtnCrudBundle:Form:fields.html.twig' %}

{% block content %}

    <form action="{{ path('cp_faq_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="well form-horizontal" novalidate>
        <fieldset>
            <legend>{% trans %}faq.edit{% endtrans %}</legend>
            {{ form_widget(edit_form) }}
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">{% trans %}crud.save{% endtrans %}</button>
                </div>
            </div>
        </fieldset>
    </form>

    <form action="{{ path('cp_faq_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <a href="{{ path('cp_faq') }}" class="btn">&laquo; {% trans %}crud.back{% endtrans %}</a>
        <button type="submit" class="btn btn-danger">{% trans %}crud.delete{% endtrans %}</button>
    </form>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_faq': 'crud.breadcrumb.list', 'cp_faq_edit': 'crud.breadcrumb.edit'}) }}
{% endblock %}
