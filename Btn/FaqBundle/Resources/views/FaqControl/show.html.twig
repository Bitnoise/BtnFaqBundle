{% from 'BtnCrudBundle::breadcrumb.html.twig' import breadcrumb %}
{% extends '::control.html.twig' %}

{% block content %}

    <h2>{% trans %}faq.faq{% endtrans %}</h2>

    <table class="table table-striped table-bordered table-condensed">
        <tbody>
            <tr>
                <th>{% trans %}faq.id{% endtrans %}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}faq.question{% endtrans %}</th>
                <td>{{ entity.question }}</td>
            </tr>
            <tr>
                <th>{% trans %}faq.answer{% endtrans %}</th>
                <td>{{ entity.answer }}</td>
            </tr>
            <tr>
                <th>{% trans %}faq.visible{% endtrans %}</th>
                <td>{{ entity.visible }}</td>
            </tr>
            <tr>
                <th>{% trans %}faq.position{% endtrans %}</th>
                <td>{{ entity.position }}</td>
            </tr>
            <tr>
                <th>{% trans %}faq.created_at{% endtrans %}</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>{% trans %}faq.updated_at{% endtrans %}</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('cp_faq_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <a href="{{ path('cp_faq') }}" class="btn">&laquo; {% trans %}crud.back{% endtrans %}</a>
        <button type="submit" data-confirmation="true" data-message="{% trans %}crud.confirm.message{% endtrans %}" data-title="{% trans %}crud.confirm.title{% endtrans %}" class="btn btn-danger">{% trans %}crud.delete{% endtrans %}</button>
    </form>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_faq': 'crud.breadcrumb.list', 'cp_faq_show': 'crud.breadcrumb.show'}) }}
{% endblock %}
